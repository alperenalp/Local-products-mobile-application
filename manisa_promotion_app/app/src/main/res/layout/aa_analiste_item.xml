<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/aa_iv_ana_liste_foto"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/aa_txt_ana_liste_isim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ürün Adı"
            android:textColor="#FF9800"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/aa_txt_ana_liste_fiyat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ürün Fiyatı"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/aa_txt_ana_liste_aciklama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ürün Açıklama"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/aa_txt_ana_liste_odeme_yontemi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ödeme Yöntemi"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/aa_txt_ana_liste_promosyon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Promosyonlar"
            android:textSize="16sp" />

        <Button
            android:id="@+id/aa_btn_siparis_ver"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Sipariş Ver" />
    </LinearLayout>
</LinearLayout>